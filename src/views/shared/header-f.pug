// HEADER::START
header.header
  .container
    .header__wrapper
      a(href='d-facility.html').header__logo
        i.icon.icon-logo
      .header__navi.header__navi--dashboard
        a(href='d-facility.html') Dashboard
        a(href='#') My jobs
          .header__navi__tag.header__navi__tag--green 1
        a(href='#') Billing
          .header__navi__tag.header__navi__tag--red 2
      .header__search
        .header__search__box
          input(type='text' placeholder='Search professionals ...')
          button(type='submit')
            i.icon.icon-search
      .header__icons
        a(href='#').header__notification
          i.icon.icon-notification
          i.icon-mark
          .header__notification__dropdown
            .header__notification__dropdown__head 
              | Notifications
              .header__navi__tag.header__navi__tag--red 2
            .header__notification__dropdown__item A candidate has accepted your job. Go to My Jobs/Filled
            .header__notification__dropdown__item Contract #3341242 was completed. Please update billing information
            .header__notification__dropdown__item A candidate has accepted your job. Go to My Jobs/Filled
        a(href='messages.html').header__messages
          i.icon.icon-message
      .header__user
        .header__user__clickable
          a(href='#').header__user__avatar
            img(src='images/tmp/headerAvatar.jpg' srcset='images/tmp/headerAvatar@2x.jpg 2x')
          a(href='#').header__user__name Savannah Nichols
          i.icon.icon-select
        .header__user__dropdown
          a(href='d-settings-contact.html') Profile settings
          a(href='#') Sign Out
          
        
      .hamburger.hamburger--squeeze
        .hamburger-box
          .hamburger-inner
          

